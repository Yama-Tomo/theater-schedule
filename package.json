{
  "name": "theater-schedule",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint --no-fix || true",
    "lint-fix": "vue-cli-service lint --fix",
    "dev": "nuxt",
    "gen": "nuxt generate",
    "build": "nuxt build && tsc -p tsconfig.nuxt-config.json",
    "start": "./server.js start -c .nuxt/ts-compiled/nuxt.config.js",
    "build:netlify": "wget -O - $SCHEDULES_DATA_ENDPOINT > src/data/schedules.json && NODE_ENV=production npm run gen"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "2.2.0",
    "@nuxtjs/sitemap": "1.2.0",
    "@types/node": "12.0.10",
    "bulma": "0.7.5",
    "nuxt": "2.8.1",
    "nuxt-property-decorator": "2.3.0",
    "vuex-type-helper": "1.2.2"
  },
  "devDependencies": {
    "@nuxt/typescript": "2.8.1",
    "@types/hard-source-webpack-plugin": "1.0.1",
    "@types/webpack": "4.4.33",
    "@vue/cli-plugin-babel": "3.8.0",
    "@vue/cli-plugin-typescript": "3.8.1",
    "@vue/cli-service": "3.8.4",
    "hard-source-webpack-plugin": "0.13.1",
    "husky": "2.4.1",
    "json-loader": "0.5.7",
    "lint-staged": "8.2.1",
    "node-sass": "4.12.0",
    "pug": "2.0.4",
    "pug-plain-loader": "1.0.0",
    "sass-loader": "7.1.0",
    "ts-node": "8.3.0",
    "typescript": "3.5.2",
    "yaml-loader": "0.5.0"
  }
}

{
  "name": "theater-schedule",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint --no-fix || true",
    "lint-fix": "vue-cli-service lint --fix",
    "dev": "nuxt-ts",
    "gen": "nuxt-ts generate",
    "build": "nuxt-ts build && tsc -p tsconfig.nuxt-config.json",
    "start": "nuxt start -c .nuxt/ts-compiled/nuxt.config.js",
    "build:netlify": "wget -O - $SCHEDULES_DATA_ENDPOINT > src/data/schedules.json && yarn gen"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint-fix"
    ]
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "2.3.0",
    "@nuxtjs/sitemap": "2.3.1",
    "@types/node": "13.13.12",
    "bulma": "0.8.2",
    "nuxt": "2.12.2",
    "nuxt-property-decorator": "2.7.2",
    "vuex-type-helper": "1.2.2"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "1.0.3",
    "@nuxt/typescript-runtime": "0.4.10",
    "@types/hard-source-webpack-plugin": "1.0.1",
    "@types/lodash": "4.14.155",
    "@types/webpack": "4.41.17",
    "@vue/cli-plugin-babel": "4.4.4",
    "@vue/cli-plugin-typescript": "4.4.4",
    "@vue/cli-service": "4.4.4",
    "hard-source-webpack-plugin": "0.13.1",
    "husky": "4.2.5",
    "json-loader": "0.5.7",
    "lint-staged": "10.2.10",
    "node-sass": "4.14.1",
    "pug": "2.0.4",
    "pug-plain-loader": "1.0.0",
    "sass-loader": "8.0.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.5",
    "yaml-loader": "0.6.0"
  }
}
